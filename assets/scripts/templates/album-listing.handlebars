
{{#each albums as |album|}}
{{log album}}
<section data-id="{{album.id}}">
  <h5>Title:</h5>
  <h2>
    {{limit album.title 15}}
  </h2>
  <h5>Genre:</h5>
  <p>
    {{#if album.genre}}
      {{album.genre}}
    {{else}}
      No Genre provided.
    {{/if}}
  </p>
  <h5>Style:</h5>
  <p>
    {{#if album.style}}
      {{album.style}}
    {{else}}
      No Style provided.
    {{/if}}
  </p>
  <h5>First Release:</h5>
  <p>
    {{#if album.firstRelease}}
      {{album.firstRelease}}
    {{else}}
      No First Release provided.
    {{/if}}
  </p>
  {{> partial}}
</section>

{{/each}}
